<?xml version="1.0" encoding="utf-8"?>
<!--
    Backup rules file for automatic backup configuration.
    Specifies which files and preferences should be backed up.
    See https://developer.android.com/guide/topics/data/autobackup
    Note: This file is ignored for devices older than API 31
    See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!-- Include shared preferences for app configuration and user data -->
    <include domain="sharedpref" path="PreferenceManager.xml" />
    
    <!-- Include user-generated data -->
    <include domain="file" path="app_data/" />
    <include domain="database" path="app_database.db" />
    
    <!-- Exclude cache as it will be regenerated -->
    <exclude domain="cache" />
    
    <!-- Exclude temporary and sensitive files -->
    <exclude domain="file" path="temp/" />
    <exclude domain="file" path="sensitive/" />
    
    <!-- Exclude app-specific cache files -->
    <exclude domain="sharedpref" path="cache_prefs.xml" />
</full-backup-content>